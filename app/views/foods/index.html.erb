<p id="notice"><%= notice %></p>
<h1>Products</h1>
<table>
<% @foods.each do |food| %>
<tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
<td>
<%= image_tag(food.image.url(:large), class: 'list_image') %>
</td>
<td class="list_description">
<dl>
<dt><%= food.title %></dt>
<dd><%= truncate(strip_tags(food.description),
length: 80) %></dd>
</dl>
</td>
<td class="list_actions">
<%= link_to 'Show', food %><br/>
<%= link_to 'Edit', edit_food_path(food) %><br/>
<%= link_to 'Destroy', food, method: :delete,
data: { confirm: 'Are you sure?' } %>
</td>
</tr>
<% end %>
</table>
<br />
<%= link_to 'New food', new_food_path %>