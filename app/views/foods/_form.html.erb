<%= form_for(food) do |f| %>
	<% if food.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(food.errors.count, "error") %>
				prohibited this food from being saved:</h2>
			<ul>
				<% food.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description, rows: 10, cols: 60, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :price %>
		<%= f.text_field :price, class: "form-control" %>
	</div>
	<div class="actions">
		<%= f.submit class: "red-btn" %>
	</div>
<% end %>