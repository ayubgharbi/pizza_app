                    <%= image_tag "food4.jpg", class: "food-image" %>  
                  </div>
                </div>

                <%= image_tag "food5.jpg", class: "door-image" %>
                <div class="trailer">
                  <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/b7KtXz-ODag" width="450" height="280"></iframe>  
                </div>
             </div>
