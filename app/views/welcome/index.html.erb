<div class="bestdisheswrapper" id="menu">
    <div id="bestdishes" class="container">
       
         <h2 class="wow fadeInUp" data-wow-delay="0.3s" style="margin-top: 140px;">MENU</h2>
         <div class="row">
             <div class="col-md-6">
              <ul class="mixitup-category" id="mixactive">
                <% @categories.each do |category| %>
                  <li data-filter=".<%= category.name.last(6) %>" class="category-name"><h4> <%= category.name %></h4></li>
                <% end %> 
              </ul>
              <div class="cont">
                
              
                 <% @foods.each do |food| %>
                <div class="row food mix <%= food.category.name.last(6) %>">
                    <div class="col-md-3">
                        <%= image_tag(food.image.url(:large), class: "food-image") %>       
                    </div>
                    <div class="col-md-6">
                        <h3 class="food-title"><%= food.title %></h3>
                        <p class="food-description"><%= sanitize(food.description) %></p>
                    </div>
                    <div class="col-md-3">
                        <h4 class="food-price"><%= food.price %>0 DH</h4>
                        <%= button_to '+', line_items_path(food_id: food), remote: true, class: "add-btn" %>
                    </div>
                </div>
            <% end %>
            </div>
             </div>
             <div class="col-md-1"></div>
             <div class="col-md-5">
              <p class="order-guide"><i class="fa fa-cart-plus" style="color: #b12025; font-size: 25px"></i> commandez en ligne en appuyant sur <%= button_to '+', '', remote: true, class: "add-btn" %></p>
                <div id="side">
                  <div id="cart">
                    <% if @cart %>
                      <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
                        <%= render @cart %>
                      <% end %>
                    <% end %>
                  </div>
                </div>


                <div class="row">
                  <div class="col-md-6" style="padding-right: 2px;">
                    <%= image_tag "food1.jpg", class: "food-image" %>
                  </div>
                  <div class="col-md-6" style="padding-left: 2px">
